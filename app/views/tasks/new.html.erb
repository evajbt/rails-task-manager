<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br>

  <%= form.label :details %>
  <%= form.text_area :details %><br>

  <%= form.label :completed %>
  <%= form.check_box :completed %><br>

  <%= form.submit "Create" %>
<% end %>
<%= link_to "Back to list", tasks_path %>
