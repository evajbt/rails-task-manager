<h1><%= @task.title %></h1>
<%= form_with model: @task, url: task_path(@task), method: :patch do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br>

  <%= form.label :details %>
  <%= form.text_area :details %><br>

  <%= form.label :completed %>
  <%= form.check_box :completed %><br>

  <%= form.submit "Update Task" %>
<% end %>
<%= link_to "Back to task", task_path %>
